<table class="table is-fullwidth">
    <thead>
        <tr>
            <th>Track</th>
            <th>Artist</th>
            <th>Duration</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        {{#each playlist.tracks}}
            <tr>
                <td>
                    {{title}}
                </td>
                <td>
                    {{artist}}
                </td>
                <td>
                    {{duration}}
                </td>
                <td>
                    <a href="/playlist/{{../playlist._id}}/deletetrack/{{_id}}" class="button">
                        <span class="icon is-small" style="color: tomato">
                            <i class="fas fa-trash"></i>
                        </span>
                    </a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>